<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
    <metadata>
        <!-- The identifier that must be unique within the hosting gallery -->
        <id>stellar-dotnet-sdk</id>

        <!-- The package version number that is used when resolving dependencies -->
        <version>2.0.1</version>

        <!-- Authors contain text that appears directly on the gallery -->
        <authors>Eric Malamisura, Michael Monte</authors>

        <!-- 
            Owners are typically nuget.org identities that allow gallery
            users to easily find other packages by the same owners.  
        -->
        <owners>elucidsoft, michaeljmonte</owners>

         <!-- License and project URLs provide links for the gallery -->
        <licenseUrl>https://github.com/elucidsoft/dotnet-stellar-sdk/blob/master/LICENSE.txt</licenseUrl>
        <projectUrl>https://github.com/elucidsoft/dotnet-stellar-sdk</projectUrl>

        <!-- The icon is used in Visual Studio's package manager UI -->
        <iconUrl>http://github.com/contoso/UsefulStuff/nuget_icon.png</iconUrl>

        <!-- 
            If true, this value prompts the user to accept the license when
            installing the package. 
        -->
        <requireLicenseAcceptance>false</requireLicenseAcceptance>

        <!-- Any details about this particular release -->
        <releaseNotes>
		- Some dependency updates to Nuget file so its more specific for targeting.
		- Added missing effects.
		- Changed PathPaymentResponse from SourceAmount to SourceMax as it was incorrect and was returning null.
		</releaseNotes>

        <!-- 
            The description can be used in package manager UI. Note that the
            nuget.org gallery uses information you add in the portal. 
        -->
        <description>The .NET Stellar SDK facilitates client integration with the Stellar Horizon API server and submission of Stellar transactions. It has two main uses: querying Horizon and building, signing, and submitting transactions to the Stellar network.</description>

        <!-- Copyright information -->
        <copyright>elucidsoft 2017</copyright>

        <!-- Tags appear in the gallery and can be used for tag searches -->
        <tags>'.NET Core' .NET Standard' 'Stellar' 'Horizon' 'Blockchain' 'Crypto' 'Distributed Ledger'</tags>

	
        <!-- Dependencies are automatically installed when the package is installed -->
        <dependencies>
			
			<group targetFramework="netstandard2.0" >
				<dependency id="Nett" version="0.9.0" />
				<dependency id="Newtonsoft.Json" version="11.0.2" />
				<dependency id="NETStandard.Library" version="2.0.1" exclude="Build,Analyzers" />
			</group>
			<group targetFramework="netcoreapp2.0" >
				<dependency id="Microsoft.NETCore.App" version="2.0.0" exclude="Build,Analyzers"  />
				<dependency id="Nett" version="0.9.0" />
				<dependency id="Newtonsoft.Json" version="11.0.2" />
			</group>
        </dependencies>
    </metadata>
		<files>
			<file src="lib\**" target="lib" />
		</files>
</package>